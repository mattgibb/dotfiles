# shell aliases
alias la='ls -a' 

# git aliases
alias gst='git status'
alias gl='git pull'
alias gp='git push'
alias gc='git commit -v'
alias gca='git commit -v -a'
alias gb='git branch -vv'
alias gba='git branch -avv'
alias gitx='gitx --all'
alias ga='git add'
alias gaa='git add --all'
alias gsl='git stash list'

function gd () {
case $EDITOR in
"mate -w")
  git diff $* | mate
;;
*)
  git diff $* | vim -
esac
}

function gdc () {
  gd --cached $*
}

# make ls append various things to different types of entry
alias ls='ls -Fh'

# change into a directory and then ls in there
function cl () {
   if [ $# = 0 ]; then
      cd && ls -l
   else
      cd "$*" && ls -l
   fi
}

# application-open shortcuts
alias s='open -a Safari'

# updates 93fa_share with ruby and rails resources
# alias up93='rsync -azPh --delete --exclude ".DS_Store" --rsh="ssh -p3000" /Users/matthewgibb/Documents/coding/ mattg@192.168.0.100:/media/hiro/mattg/shared/programming/'
alias up93='rsync -azPh --exclude ".DS_Store" --rsh="ssh -p3000" /Users/matthewgibb/Documents/coding/ mattg@192.168.0.100:/media/hiro/mattg/shared/programming/'

# great website for shell commands
alias helpme='open http://ss64.com/osx/'

# change to registration directory and open up textmate
alias itkstart='cd ~/Code/imaging/registration; mate .'

alias r='rails'

# runs command-line matlab
alias matlab='matlab -nosplash -nojvm'

# starts vim in better mode i.e. not compatible with vi
alias vim='vim -N'

# stops R asking whether you want to save workspace image
alias R='R --no-save'

# bundle shortcuts
alias b='bundle'
alias be='bundle exec'

alias grin="grep -rin"

alias rh="rsync -azvPh"
