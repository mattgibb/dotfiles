[alias]
  co = checkout
  st = status
  cm = commit
  last = log -1 HEAD
  ctags = !.git/hooks/ctags
  tree = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%an, %cr)%Creset %C(bold blue)(%cn, %cr)%Creset'
  subtree = log --graph --oneline --decorate --left-right --boundary
  unstage = reset HEAD --
[apply]
  whitespace = nowarn
[core]
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes
  abbrev = 4
[gc]
  auto = 1
[merge]
  conflictStyle = diff3
  tool = vimdiff
[push]
  default = current
